<%= form_for [:admin, @user] do |f| %>
  <%= render "shared/error_messages", :object => f.object %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.check_box :admin %>
    <%= f.label :admin, "Is an admin?" %>
  </p>

  <%= f.submit %>
<% end %>
