<span class="tag" id="tag-<%= tag.name.parameterize %>">
  <% if can?(:tag, @ticket.project) || current_user.admin? %>
    <%= link_to "x", remove_ticket_tag_path(@ticket, tag),
    :id => "delete-#{tag.name.parameterize}",
    :remote => true,
    :method => :delete %>
  <% end %>
  <%= tag.name %>
</span>
